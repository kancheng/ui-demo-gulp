  <style type="text/css">
html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed, 
figure, figcaption, footer, header, hgroup, 
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
}
/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure, 
footer, header, hgroup, menu, nav, section {
  display: block;
}
body {
  line-height: 1;
}
ol, ul {
  list-style: none;
}
blockquote, q {
  quotes: none;
}
blockquote:before, blockquote:after,
q:before, q:after {
  content: '';
  content: none;
}
table {
  border-collapse: collapse;
  border-spacing: 0;
}

a {
  text-decoration: none;
}

*, *:before, *:after {
  box-sizing: border-box;
  /* Test */
  /* outline: 1px solid #000; */
}

body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Microsoft JhengHei", Roboto, "Helvetica Neue", Arial, sans-serif;
/* mac, IOS 系統字體 Windows 英文系統字  微軟正黑體 Android 系統字  IOS 系統字  通用字體 */
  background: #e7eeea;            
}

/* =============================================================== */

img {
  vertical-align: bottom;
  max-width: 100%;
}

.container {
  max-width: 1296px;
  margin: 0 auto;
  padding: 0 12px;
}

header {
  background-color: #AA0601;
}

.wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.logo {
  width: 80px;
}

.header-menu {
  display: flex;
  font-size: 20px;
}

.header-menu li {
  padding: 25px 32px; 
}

.header-menu li a {
  color: white;
}

.header-menu li:hover {
  background-color: #ca130d; 
}

footer {
  background-color: #AA0601; 
}

.nav {
  display: flex;
  justify-content: space-between;
  padding-top: 60px;
  padding-bottom: 32px;
  border-bottom: 1px solid white; 
}

.footer-menu {
  display: flex;
  align-items: center;
  padding-bottom: 36px;
}
.footer-menu li {
  padding-right: 48px; 
}
.footer-menu a {
  color: white;
  font-size: 16px;
}
.footer-menu a:hover {
  opacity: 0.6; 
}

.icon {
  display: flex;
}
.icon img {
  max-width: 48px;
}
.icon a {
  display: block;
}

.icon a:hover {
  opacity: 0.8; 
}

.ml-32 {
  margin-left: 32px;
}

.call {
  color: white;
}

.mail {
  color: white;
}

.tel {
  font-size: 36px;
}

.tel span {
  font-size: 36px;
  padding-right: 22px;
}
.tel a {
  color: white;
}

.tel a:hover {
  opacity: 0.6;
}

.copyright {
  color: white;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 32px 0;
}

.copyright a:hover {
  opacity: 0.6; 
}

.service-footer {
  display: flex;
}

.service-footer a {
  color: white;
}

.pr-48 {
  padding-right: 48px;
}

@media screen and (max-width: 767px) {
  .wrap {
    flex-direction: column;
    padding-right: 0;
    padding-left: 0; 
  }

  .logo {
    padding: 12px 0; 
  }

  .tel {
    font-size: 16px;
  }

  .tel span {
    font-size: 16px;
    padding-right: 11px;
  }

  .header-menu {
    width: 100%;
    flex-wrap: wrap; 
  }

  .header-menu li {
    width: 50%;
    padding: 12px 0;
    text-align: center;
    border-top: 1px solid white;
    border-right: 1px solid #FFF; 
  }

  .header-menu a {
    font-size: 16px;
    display: block;
    padding: 12px 0;
  }

  .nav {
    padding: 24px 0; 
  }

  .footer-menu {
    display: none;
  }

  .icon li {
    margin-left: 8px; 
  }

  .icon img {
    max-width: 24px;
  }

  .tel {
    font-size: 16px;
  }

  .tel span {
    font-size: 16px;
    padding-right: 11px;
  }

  .copyright {
    flex-direction: column;
    padding-top: 16px; 
  }

  .copyright p {
    font-size: 16px;
  }

  .service-footer {
    font-size: 16px;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start; 
  }

  .service-footer li {
    padding-top: 8px;
  }
}
  </style>

</head>

